run_python_code() {
    python3${pVer%.*} -c "$1"
}

load_configenv() {
    $(run_python_code 'from dotenv import load_dotenv, find_dotenv

load_dotenv(find_dotenv(), override=True)')
}

if [[ ${CONFIG_FILE_URL} ]];
then
    echo "Downloading... config file"
    curl -o config.env -s $CONFIG_FILE_URL
    echo "Done"
    load_configenv
else
    echo "CONFIG_FILE_URL var not provided!"
fi

if [[ ${UPSTREAM_REPO} && ${UPSTREAM_BRANCH} ]];
then
    UPSTREAM_REPO=$UPSTREAM_REPO
    UPSTREAM_BRANCH=$UPSTREAM_BRANCH
    echo "UPSTREAM_REPO and UPSTREAM_BRANCH defined!"
else
    UPSTREAM_REPO="https://github.com/ahad0xff/admlb"
    UPSTREAM_BRANCH="main"
    echo "UPSTREAM_REPO or UPSTREAM_BRANCH missing using default one"
fi

MAINDIR=/usr/src/app

mkdir $MAINDIR && chmod 777 $MAINDIR && cd $MAINDIR

git init -q
git config --global user.email ahadmirrorlab1@gmail.com
git config --global user.name ahadz-git
echo "A H A D" >> admlb.txt
git add .
git commit -sm update -q
git remote add origin $UPSTREAM_REPO
git fetch origin -q
git reset --hard origin/$UPSTREAM_BRANCH -q

python3 -m bot
